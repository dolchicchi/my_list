<div class="user-main">
  <div class="search-content">
    <%= search_form_for @q, url: folder_path(@folder) do |f| %>
      <%= f.search_field :title_or_ingredients_name_cont, {placeholder: "レシピ名か食材名を入力して下さい", class: "search-text"} %>
      <%= f.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
  <div class="user-form">
    <div class="user-postit" id="user-postit">
      <div class="user-title">献立登録</div>
      <%= form_with url: lists_path , id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render partial: "search_folder_recipe", collection: @search_folder_recipes, :locals => {:f => f} %>
        <%= f.date_field :date, class: 'form-control' %>
      <div class="actions" id="actions">
        <%= f.submit "登録" %> 
      </div>
      <% end %>
    </div>
  </div>
</div>
