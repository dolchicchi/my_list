<div class="user-main">
  <div class="search-content">
    <%= search_form_for @q, url: folder_path(@folder) do |f| %>
      <%= f.search_field :title_or_ingredients_name_cont, {placeholder: "レシピ名か食材名を入力して下さい", class: "search-text"} %>
      <%= f.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
  <div class="user-form">
    <div class="user-postit" id="user-postit">
      <div class="user-title"><%= @folder.title %></div>
      <%= form_with url: lists_path , id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render partial: "folder_included_recipe", collection: @folder_included_recipes, :locals => {f: f} %>
        <div class="add-list">日付を選択して献立へ追加</div>
        <input type="hidden" name="folder_id" value="<%= @folder.id %>">
        <%= f.date_field :date, class: 'date-select' %>
        <div class="actions" id="actions">
          <%= f.submit "献立へ追加" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>
